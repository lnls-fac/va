record(calc, "SIPA-SIGX")
{
    field(DESC, "SI HORIZONTAL BEAM SIZE")
    field(EGU, "um")
    field(INPA, "8.9")
    field(INPB, "1")
    field(CALC, "A+B*2*(RNDM-.5)")
    field(SCAN, ".1 second")
}

