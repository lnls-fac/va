
record(ai, "VA-TSDI-BPM-NOISELEVEL")
{
    field(DESC, "Noise level for bpm")
    field(INP, .1)
    field(EGU, "nm")
}

record(calc, "TSDI-BPM-$(sector)$(pos):MONIT:X")
{
    field(DESC, "TS BPM sector $(sector) pos $(pos) x")
    field(SCAN, ".1 second")
    field(INPA, "VA-TSDI-BPM-$(sector)$(pos):MONIT:X")
    field(INPB, "VA-TSDI-BPM-NOISELEVEL")
    field(CALC, "(1e9)*A + B*(2.0*RNDM - 1.0)*(2.0*RNDM - 1.0)")
    field(EGU, "nm")
    field(FLNK, "TSDI-BPM-$(sector)$(pos):MONIT:Y")
}

record(calc, "TSDI-BPM-$(sector)$(pos):MONIT:Y")
{
    field(DESC, "TS BPM sector $(sector) pos $(pos) y")
    field(INPA, "VA-TSDI-BPM-$(sector)$(pos):MONIT:Y")
    field(INPB, "VA-TSDI-BPM-NOISELEVEL")
    field(CALC, "(1e9)*A + B*(2.0*RNDM - 1.0)*(2.0*RNDM - 1.0)")
    field(EGU, "nm")
}

record(aSub, "ADD-NOISE-TSDI-BPM")
{
    field(SCAN, ".1 second")
    field(SNAM, "add_noise")
    field(INPA, "VA-TSDI-BPM-FAM:MONIT:X")
    field(INPB, "VA-TSDI-BPM-FAM:MONIT:Y")
    field(INPC, "VA-TSDI-BPM-NOISELEVEL")
    field(NOA, 6)
    field(NOB, 6)
    field(NOC, 1)
    field(NOVA, 6)
    field(NOVB, 6)
    field(FLNK, "TSDI-BPM-FAM:MONIT:X")
}

record(waveform, "TSDI-BPM-FAM:MONIT:X")
{
    field(DESC, "TS BPM FAM X")
    field(INP, "ADD-NOISE-TSDI-BPM.A")
    field(NELM, 6)
    field(FTVL, "DOUBLE")
    field(EGU, "nm")
    field(FLNK, "TSDI-BPM-FAM:MONIT:Y")
}

record(waveform, "TSDI-BPM-FAM:MONIT:Y")
{
    field(DESC, "TS BPM FAM Y")
    field(INP, "ADD-NOISE-TSDI-BPM.B")
    field(NELM, 6)
    field(FTVL, "DOUBLE")
    field(EGU, "nm")
}
