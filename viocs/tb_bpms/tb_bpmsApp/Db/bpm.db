
record(ai, "VA-TBDI-BPM-NOISELEVEL")
{
    field(DESC, "Noise level for bpm")
    field(INP, 100)
    field(EGU, "nm")
}

record(calc, "TBDI-BPM-$(sector)$(pos):MONIT:X")
{
    field(DESC, "TB BPM sector $(sector) pos $(pos) x")
    field(SCAN, ".1 second")
    field(INPA, "VA-TBDI-BPM-$(sector)$(pos):MONIT:X")
    field(INPB, "VA-TBDI-BPM-NOISELEVEL")
    field(CALC, "A + B*(2.0*RNDM - 1.0)*(2.0*RNDM - 1.0)")
    field(EGU, "nm")
    field(FLNK, "TBDI-BPM-$(sector)$(pos):MONIT:Y")
}

record(calc, "TBDI-BPM-$(sector)$(pos):MONIT:Y")
{
    field(DESC, "TB BPM sector $(sector) pos $(pos) y")
    field(INPA, "VA-TBDI-BPM-$(sector)$(pos):MONIT:Y")
    field(INPB, "VA-TBDI-BPM-NOISELEVEL")
    field(CALC, "A + B*(2.0*RNDM - 1.0)*(2.0*RNDM - 1.0)")
    field(EGU, "nm")
}

record(aSub, "ADD-NOISE-TBDI-BPM")
{
    field(SCAN, ".1 second")
    field(SNAM, "add_noise")
    field(INPA, "VA-TBDI-BPM-FAM:MONIT:X")
    field(INPB, "VA-TBDI-BPM-FAM:MONIT:Y")
    field(INPC, "VA-TBDI-BPM-NOISELEVEL")
    field(NOA, 6)
    field(NOB, 6)
    field(NOC, 1)
    field(NOVA, 6)
    field(NOVB, 6)
    field(FLNK, "TBDI-BPM-FAM:MONIT:X")
}

record(waveform, "TBDI-BPM-FAM:MONIT:X")
{
    field(DESC, "TB BPM FAM X")
    field(INP, "ADD-NOISE-TBDI-BPM.A")
    field(NELM, 6)
    field(FTVL, "DOUBLE")
    field(EGU, "nm")
    field(FLNK, "TBDI-BPM-FAM:MONIT:Y")
}

record(waveform, "TBDI-BPM-FAM:MONIT:Y")
{
    field(DESC, "TB BPM FAM Y")
    field(INP, "ADD-NOISE-TBDI-BPM.B")
    field(NELM, 6)
    field(FTVL, "DOUBLE")
    field(EGU, "nm")
}
