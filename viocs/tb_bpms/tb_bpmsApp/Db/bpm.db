
record(ai, "VA-TB-Fam:DI-BPM:NoiseLvl")
{
    field(DESC, "Noise level for bpm")
    field(INP, 100)
    field(EGU, "nm")
}

record(calc, "TB-$(sector):DI-BPM$(pos):MonitPosX")
{
    field(DESC, "TB BPM sector $(sector) pos $(pos) x")
    field(SCAN, ".1 second")
    field(INPA, "VA-TB-$(sector):DI-BPM$(pos):MonitPosX")
    field(INPB, "VA-TB-Fam:DI-BPM:NoiseLvl")
    field(CALC, "A + B*(2.0*RNDM - 1.0)*(2.0*RNDM - 1.0)")
    field(EGU, "nm")
    field(FLNK, "TB-$(sector):DI-BPM$(pos):MonitPosY")
}

record(calc, "TB-$(sector):DI-BPM$(pos):MonitPosY")
{
    field(DESC, "TB BPM sector $(sector) pos $(pos) y")
    field(INPA, "VA-TB-$(sector):DI-BPM$(pos):MonitPosY")
    field(INPB, "VA-TB-Fam:DI-BPM:NoiseLvl")
    field(CALC, "A + B*(2.0*RNDM - 1.0)*(2.0*RNDM - 1.0)")
    field(EGU, "nm")
}

record(aSub, "ADD-NOISE-TBDI-BPM")
{
    field(SCAN, ".1 second")
    field(SNAM, "add_noise")
    field(INPA, "VA-TB-Fam:DI-BPM:MonitPosX")
    field(INPB, "VA-TB-Fam:DI-BPM:MonitPosY")
    field(INPC, "VA-TB-Fam:DI-BPM:NoiseLvl")
    field(NOA, 6)
    field(NOB, 6)
    field(NOC, 1)
    field(NOVA, 6)
    field(NOVB, 6)
    field(FLNK, "TB-Fam:DI-BPM:MonitPosX")
}

record(waveform, "TB-Fam:DI-BPM:MonitPosX")
{
    field(DESC, "TB BPM FAM X")
    field(INP, "ADD-NOISE-TBDI-BPM.A")
    field(NELM, 6)
    field(FTVL, "DOUBLE")
    field(EGU, "nm")
    field(FLNK, "TB-Fam:DI-BPM:MonitPosY")
}

record(waveform, "TB-Fam:DI-BPM:MonitPosY")
{
    field(DESC, "TB BPM FAM Y")
    field(INP, "ADD-NOISE-TBDI-BPM.B")
    field(NELM, 6)
    field(FTVL, "DOUBLE")
    field(EGU, "nm")
}
