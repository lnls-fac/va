
record(ai, "VA-TSPU-NOISELEVEL")
{
    field(DESC, "Noise level for individual current")
    field(INP, 0.001)
    field(EGU, "A")
}

record(calc, "TSPU-$(family)-$(pos)-RB")
{
    field(DESC, "TSPU-$(family)-$(pos) current readback")
    field(SCAN, ".1 second")
    field(PREC, 10)
    field(INPA, "VA-TSPU-$(family)-$(pos)")
    field(INPB, "VA-TSPU-NOISELEVEL")
    field(CALC, "A+B*2*(RNDM-.5)")
    field(EGU, "A")
}

record(ao, "TSPU-$(family)-$(pos)-SP")
{
    field(DESC, "TSPU-$(family)-$(pos) current setpoint")
    field(SCAN, "Passive")
    field(PREC, 10)
    field(OUT, "VA-TSPU-$(family)-$(pos)")
    field(EGU, "A")
}

record(seq, "SEQ-TSPU-$(family)-$(pos)")
{
    field(SCAN, "Event")
    field(EVNT, 123)
    field(DOL1, "VA-TSPU-$(family)-$(pos)")
    field(LNK1, "TSPU-$(family)-$(pos)-SP")
    field(FLNK, "TSPU-$(family)-$(pos)-SP")
}
