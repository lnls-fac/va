
record(ai, "VA-SIDI-BPM-NOISELEVEL")
{
    field(DESC, "Noise level for bpm")
    field(INP, .1)
    field(EGU, "um")
}

record(calc, "SIDI-BPM-$(sector)$(pos):MONIT:X")
{
    field(DESC, "SI BPM sector $(sector) pos $(pos) x")
    field(SCAN, ".1 second")
    field(INPA, "VA-SIDI-BPM-$(sector)$(pos):MONIT:X")
    field(INPB, "VA-SIDI-BPM-NOISELEVEL")
    field(CALC, "(1e6)*A + B*(2.0*RNDM - 1.0)*(2.0*RNDM - 1.0)")
    field(EGU, "um")
    field(FLNK, "SIDI-BPM-$(sector)$(pos):MONIT:Y")
}

record(calc, "SIDI-BPM-$(sector)$(pos):MONIT:Y")
{
    field(DESC, "SI BPM sector $(sector) pos $(pos) y")
    field(INPA, "VA-SIDI-BPM-$(sector)$(pos):MONIT:Y")
    field(INPB, "VA-SIDI-BPM-NOISELEVEL")
    field(CALC, "(1e6)*A + B*(2.0*RNDM - 1.0)*(2.0*RNDM - 1.0)")
    field(EGU, "um")
}

record(aSub, "ADD-NOISE-SIDI-BPM")
{
    field(SCAN, ".1 second")
    field(SNAM, "add_noise")
    field(INPA, "VA-SIDI-BPM-FAM:MONIT:X")
    field(INPB, "VA-SIDI-BPM-FAM:MONIT:Y")
    field(INPC, "VA-SIDI-BPM-NOISELEVEL")
    field(NOA, 160)
    field(NOB, 160)
    field(NOC, 1)
    field(NOVA, 160)
    field(NOVB, 160)
    field(FLNK, "SIDI-BPM-FAM:MONIT:X")
}

record(waveform, "SIDI-BPM-FAM:MONIT:X")
{
    field(DESC, "SI BPM FAM X")
    field(INP, "ADD-NOISE-SIDI-BPM.A")
    field(NELM, 160)
    field(FTVL, "DOUBLE")
    field(EGU, "um")
    field(FLNK, "SIDI-BPM-FAM:MONIT:Y")
}

record(waveform, "SIDI-BPM-FAM:MONIT:Y")
{
    field(DESC, "SI BPM FAM Y")
    field(INP, "ADD-NOISE-SIDI-BPM.B")
    field(NELM, 160)
    field(FTVL, "DOUBLE")
    field(EGU, "um")
}
