
record(ai, "VA-BODI-BPM-NOISELEVEL")
{
    field(DESC, "Noise level for bpm")
    field(INP, 100)
    field(EGU, "nm")
}

record(calc, "BODI-BPM-$(sector)$(pos):MONIT:X")
{
    field(DESC, "BO BPM sector $(sector) pos $(pos) x")
    field(SCAN, ".1 second")
    field(INPA, "VA-BODI-BPM-$(sector)$(pos):MONIT:X")
    field(INPB, "VA-BODI-BPM-NOISELEVEL")
    field(CALC, "A + B*(2.0*RNDM - 1.0)*(2.0*RNDM - 1.0)")
    field(EGU, "nm")
    field(FLNK, "BODI-BPM-$(sector)$(pos):MONIT:Y")
}

record(calc, "BODI-BPM-$(sector)$(pos):MONIT:Y")
{
    field(DESC, "BO BPM sector $(sector) pos $(pos) y")
    field(INPA, "VA-BODI-BPM-$(sector)$(pos):MONIT:Y")
    field(INPB, "VA-BODI-BPM-NOISELEVEL")
    field(CALC, "A + B*(2.0*RNDM - 1.0)*(2.0*RNDM - 1.0)")
    field(EGU, "nm")
}

record(aSub, "ADD-NOISE-BODI-BPM")
{
    field(SCAN, ".1 second")
    field(SNAM, "add_noise")
    field(INPA, "VA-BODI-BPM-FAM:MONIT:X")
    field(INPB, "VA-BODI-BPM-FAM:MONIT:Y")
    field(INPC, "VA-BODI-BPM-NOISELEVEL")
    field(NOA, 50)
    field(NOB, 50)
    field(NOC, 1)
    field(NOVA, 50)
    field(NOVB, 50)
    field(FLNK, "BODI-BPM-FAM:MONIT:X")
}

record(waveform, "BODI-BPM-FAM:MONIT:X")
{
    field(DESC, "BO BPM FAM X")
    field(INP, "ADD-NOISE-BODI-BPM.A")
    field(NELM, 50)
    field(FTVL, "DOUBLE")
    field(EGU, "nm")
    field(FLNK, "BODI-BPM-FAM:MONIT:Y")
}

record(waveform, "BODI-BPM-FAM:MONIT:Y")
{
    field(DESC, "BO BPM FAM Y")
    field(INP, "ADD-NOISE-BODI-BPM.B")
    field(NELM, 50)
    field(FTVL, "DOUBLE")
    field(EGU, "nm")
}
