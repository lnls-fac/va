
record(ai, "VA-BO-Ind:PS-NOISELEVEL")
{
    field(DESC, "Noise level for individual current")
    field(INP, 0.001)
    field(EGU, "A")
}

record(calc, "BO-$(pos):PS-$(family):Current-RB")
{
    field(DESC, "BO-$(pos):PS-$(family) current readback")
    field(SCAN, ".1 second")
    field(PREC, 10)
    field(INPA, "VA-BO-$(pos):PS-$(family)")
    field(INPB, "VA-BO-Ind:PS-NOISELEVEL")
    field(CALC, "A+B*2*(RNDM-.5)")
    field(EGU, "A")
}

record(ao, "BO-$(pos):PS-$(family):Current-SP")
{
    field(DESC, "BO-$(pos):PS-$(family) current setpoint")
    field(SCAN, "Passive")
    field(PREC, 10)
    field(OUT, "VA-BO-$(pos):PS-$(family)")
    field(EGU, "A")
}

record(seq, "SEQ-BO-$(pos):PS-$(family)")
{
    field(SCAN, "Event")
    field(EVNT, 123)
    field(DOL1, "VA-BO-$(pos):PS-$(family)")
    field(LNK1, "BO-$(pos):PS-$(family):Current-SP")
    field(FLNK, "BO-$(pos):PS-$(family):Current-SP")
}
