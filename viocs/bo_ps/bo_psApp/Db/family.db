
record(ai, "VA-BOPS-FAM-NOISELEVEL")
{
    field(DESC, "Noise level for family current")
    field(INP, 0.001)
    field(EGU, "A")
}

record(calc, "BOPS-$(family)-RB")
{
    field(DESC, "BOPS-$(family) current readback")
    field(SCAN, ".1 second")
    field(PREC, 10)
    field(INPA, "VA-BOPS-$(family)")
    field(INPB, "VA-BOPS-FAM-NOISELEVEL")
    field(CALC, "A+B*2*(RNDM-.5)")
    field(EGU, "A")
}

record(ao, "BOPS-$(family)-SP")
{
    field(DESC, "BOPS-$(family) current setpoint")
    field(SCAN, "Passive")
    field(PREC, 10)
    field(OUT, "VA-BOPS-$(family)")
    field(EGU, "A")
}

record(seq, "SEQ-BOPS-$(family)")
{
    field(SCAN, "Event")
    field(EVNT, 125)
    field(DOL1, "VA-BOPS-$(family)")
    field(LNK1, "BOPS-$(family)-SP")
    field(FLNK, "BOPS-$(family)-SP")
}
