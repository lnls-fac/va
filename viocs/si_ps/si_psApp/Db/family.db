
record(ai, "SI-Fam:PS-NoiseLvl")
{
    field(DESC, "Noise level for family current")
    field(INP, 0.0000000001)
    field(EGU, "A")
}

record(calc, "SI-Fam:PS-$(family):Current-RB")
{
    field(DESC, "SI-Fam:PS-$(family) current readback")
    field(SCAN, ".1 second")
    field(PREC, 10)
    field(INPA, "VA-SI-Fam:PS-$(family):Current-RB")
    field(INPB, "SI-Fam:PS-NoiseLvl")
    field(CALC, "A+B*2*(RNDM-.5)")
    field(EGU, "A")
}

record(ao, "SI-Fam:PS-$(family):Current-SP")
{
    field(DESC, "SI-Fam:PS-$(family) current setpoint")
    field(SCAN, "Passive")
    field(PREC, 10)
    field(OUT, "VA-SI-Fam:PS-$(family):Current-SP")
    field(EGU, "A")
}

record(seq, "SEQ-SI-Fam:PS-$(family):Current-SP")
{
    field(SCAN, "Event")
    field(EVNT, 123)
    field(DOL1, "VA-SI-Fam:PS-$(family):Current-SP")
    field(LNK1, "SI-Fam:PS-$(family):Current-SP")
    field(FLNK, "SI-Fam:PS-$(family):Current-SP")
}
