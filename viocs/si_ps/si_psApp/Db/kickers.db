
record(ai, "VA-SI-Ind:PU-NoiseLvl")
{
    field(DESC, "Noise level")
    field(INP, 0.001)
    field(EGU, "A")
}

record(calc, "SI-$(pos):PU-$(family):Current-RB")
{
    field(DESC, "SI-$(pos):PU-$(family) voltage readback")
    field(SCAN, ".1 second")
    field(PREC, 10)
    field(INPA, "VA-SI-$(pos):PU-$(family):Current-RB")
    field(INPB, "VA-SI-Ind:PU-NoiseLvl")
    field(CALC, "A+B*2*(RNDM-.5)")
    field(EGU, "A")
}

record(ao, "SI-$(pos):PU-$(family):Current-SP")
{
    field(DESC, "SI-$(pos):PU-$(family) voltage setpoint")
    field(SCAN, "Passive")
    field(PREC, 10)
    field(OUT, "VA-SI-$(pos):PU-$(family):Current-SP")
    field(EGU, "A")
}

record(seq, "SEQ-SI-$(pos):PU-$(family):Current-SP")
{
    field(SCAN, "Event")
    field(EVNT, 123)
    field(DOL1, "VA-SI-$(pos):PU-$(family):Current-SP")
    field(LNK1, "SI-$(pos):PU-$(family):Current-SP")
    field(FLNK, "SI-$(pos):PU-$(family):Current-SP")
}
